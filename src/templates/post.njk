{% block content %}
<div id="post" class="page">
  <article class="article post card" itemscope itemtype="http://schema.org/Article">
    <div class="post-block">
      <link itemprop="mainEntityOfPage" href="{{ '/' + path }}">
    </div>
    <header class="post-header">
      <h1 class="post-title" itemprop="name headline">
        {% if onIndexPage %}
          <a class="post-title-link post-title-link-external link" href="{{ '/' + path }}" itemprop="url">{{ post.title }}</a>
        {% else %}
          {{ title }}
        {% endif%}
      </h1>
      <div class="post-meta">
        {% if date %}
        <span class="post-date">
          <i class="fa fa-calendar"></i> <span><time title="post-date" itemprop="dateCreated datePublished" datetime="{{ date }}">{{ date }}</time></span>
        </span>
        {% endif %}
        {% if topics  %}
        <span class="post-tags">
            <span class="post-divider">|</span>
            {% for t in topics %}
            <span class="post-tag"><i class="fa fa-tags"></i><a class="link" href="{{ '/topics#' + t }}" rel="tag">{{ t }}</a></span>
            {% endfor %}
        </span>
        {% endif %}
      </div>
    </header>
    <main class="post-main" itemprop="articleBody">
      {{ contents | safe }}
    </main>
    <footer class="post-footer">
        {% if onIndexPage %}
          <a class="post-more-link link" href="{{ '/' + path }}" itemprop="url">continue reading...</a>
        {% else %}
        {% endif%}
    </footer>
  </article>
</div>
{% endblock %}